<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:layout_constraintBottom_toTopOf="@+id/txtBtnBackwards"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/moodView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:id="@+id/imgViewMoodEntryOverview"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/imgViewMoodDescription"
                    android:foreground="#1A62727B"
                    android:padding="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/guidelineText"
                    app:layout_constraintEnd_toEndOf="@id/guidelineVertical"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:srcCompat="@drawable/ic_sentiment_very_happy_24px_outline" />

                <ImageView
                    android:id="@+id/imgViewAction1EntryOverview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/imgViewAction1Description"
                    android:foreground="#1A62727B"
                    android:paddingTop="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal"
                    app:layout_constraintEnd_toEndOf="@id/guidelineAction1"
                    app:layout_constraintStart_toStartOf="@id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@drawable/ic_sports_esports_24px" />

                <ImageView
                    android:id="@+id/imgViewAction2EntryOverview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/imgViewAction2Description"
                    android:foreground="#1A62727B"
                    android:paddingTop="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal"
                    app:layout_constraintEnd_toEndOf="@id/guidelineAction2"
                    app:layout_constraintStart_toStartOf="@id/guidelineAction1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@drawable/ic_weekend_24px_1" />

                <ImageView
                    android:id="@+id/imgViewAction3EntryOverview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/imgViewAction3Description"
                    android:foreground="#1A62727B"
                    android:paddingTop="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guidelineAction2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@drawable/ic_groups_24px" />


                <TextView
                    android:id="@+id/txtViewEntryDateOverview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/source_sans_pro"
                    android:foreground="#1A62727B"
                    android:gravity="center_horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="@string/txtViewEntryDateExample"
                    android:textAlignment="textStart"
                    android:textColor="@color/primaryDarkColor"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/guidelineText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/guidelineVertical"
                    app:layout_constraintTop_toTopOf="@id/guidelineHorizontal"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="RtlCompat" />


                <TextView
                    android:id="@+id/noteViewTextEntryOverview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/source_sans_pro"
                    android:gravity="start"
                    android:lines="14"
                    android:maxLines="14"
                    android:paddingLeft="15dp"
                    android:paddingTop="25dp"
                    android:paddingRight="15dp"
                    android:text="@string/randomTextExample"
                    android:textColor="@color/primaryDarkColor"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtViewEntryDateOverview" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineVertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.32" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.09" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineAction1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="203dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineAction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.79" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.17055656" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/txtBtnBackwards"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:paddingTop="14dp"
            android:focusable="true"
            android:fontFamily="@font/source_sans_pro"
            android:text="@string/txtBtnBack"
            android:textAllCaps="true"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/imgbtnDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:tint="@color/primaryLightColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_delete_outline_24px"
            android:contentDescription="@string/contentDescription_loeschen"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>